<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Afghan Proverbs</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="mb-4">Afghan Proverbs</h2>

      <!-- Button to Add New Proverb -->
      <a href="/add" class="btn btn-success mb-3">Add New Proverb</a>

      <!-- Proverbs List -->
      <div class="list-group">
        <% proverbs.forEach((proverb) => { %>
        <a
          href="/proverb/<%= proverb.id %>"
          class="list-group-item list-group-item-action"
        >
          <h5 class="mb-1"><%= proverb.translationEn %></h5>
          <p class="mb-1">
            <%= proverb.textDari %> / <%= proverb.textPashto %>
          </p>
          <small>Category: <%= proverb.category %></small>
        </a>
        <% }) %>
      </div>
    </div>
  </body>
</html>
